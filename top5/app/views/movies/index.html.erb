<h1>Movies#index</h1>

<% if flash[:error] %>
    <p><%= flash[:error] %></p>
<% end %>

<%= form_tag mresults_path do %>
  <%= text_field_tag :searchterm, "", class: 'text-field', autofocus: true, placeholder: 'Search by title' %>
  <%= submit_tag "Submit", class: 'btn-large btn-thin' %>
<% end %>

<div class='content-container'>
<% @results["Search"].each do |put| %>
  <a href="/mresults/<%= put["imdbID"]%>">
    <img class='search-images' src= "<%= put["Poster"]%>">
  </a>
  <%= button_to "Add Movie to top 5", {:controller => 'movies', :action => 'create', :id => put["imdbID"] } %>
<% end %>
</div>
