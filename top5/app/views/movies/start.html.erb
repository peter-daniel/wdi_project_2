
<h1>TOP 5 MOVIES</h1>

<div class='header'>
<% if current_user %>
  <div><h2>Welcome, <%= current_user.username %></h2></div>
  <div><button><a href="/logout">Logout</a></button>
<% end %>
</div>


<%= button_to 'Register', signup_path %>


<h2> Login </h2>

<%= form_tag login_path do %>

  Email: <%= text_field_tag :email %>
  Password: <%= password_field_tag :password %>
  <%= submit_tag "log in" %>

<% end %>
