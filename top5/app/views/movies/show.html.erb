<button class="btn-logout"><a href="/logout">LOGOUT</a></button>
<div class='header-area'>
<% if current_user %>
    <div class="title-position">
      <h1><%= current_user.username.upcase %>'S <span>TOP 5 MOVIES<span></h1>
      <div><button class="btn-small"><a href="/showall">ALL TOP 5's</a></button></div>
  </div>
<% end %>
</div>

<% if flash[:error] %>
    <p><%= flash[:error] %></p>
<% end %>
<div class='show-container'>
<div><img class="show-poster" src= "<%= @pick["Poster"]%>"></div>
<div class='show-details'>
  <p>Title: <span><%= @pick["Title"] %></span></p>
  <p>Director: <span><%= @pick["Director"] %></span></p>
  <p>Year: <span><%= @pick["Year"] %></span></p>
  <p>Actors: <span><%= @pick["Actors"] %></span></p>
  <p>Rating: <span><%= @pick["Rated"] %></span></p>
  <%= button_to "ADD TO YOUR TOP 5", { :controller => 'movies', :action => 'create', :id => @pick["imdbID"] }, {class: 'btn-addto5-from-details' } %>
</div>
</div>
  <iframe class="iframe" src="/mytop5" width="160" height="1354" frameBorder="0" scrolling="no" frameBorder="0" bgcolor="#38322f">
</div>
